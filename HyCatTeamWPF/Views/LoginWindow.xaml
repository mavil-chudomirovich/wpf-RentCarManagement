<Window x:Class="HyCatTeamWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GreenWheel - Login"
        Height="560" Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Hiệu ứng đổ bóng -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="#000000"
                          BlurRadius="15"
                          ShadowDepth="4"
                          Opacity="0.15"/>
        <QuadraticEase x:Key="SmoothEase" EasingMode="EaseInOut"/>

        <!-- TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="46"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#1a1a1a"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#d6d6d6"/>
            <Setter Property="BorderThickness" Value="1.6"/>
            <Setter Property="CaretBrush" Value="#10B981"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="12,0"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#10B981"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#10B981"
                                                          BlurRadius="10"
                                                          ShadowDepth="0"
                                                          Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="46"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#1a1a1a"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#d6d6d6"/>
            <Setter Property="BorderThickness" Value="1.6"/>
            <Setter Property="CaretBrush" Value="#10B981"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="12,0"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#10B981"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#10B981"
                                                          BlurRadius="10"
                                                          ShadowDepth="0"
                                                          Opacity="0.25"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Login Button -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="25"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nút tròn macOS -->
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Ellipse Fill="{TemplateBinding Background}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush x:Name="AnimatedBg" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#10B981" Offset="0" x:Name="grad1"/>
                    <GradientStop Color="#059669" Offset="0.5" x:Name="grad2"/>
                    <GradientStop Color="#064E3B" Offset="1" x:Name="grad3"/>
                </LinearGradientBrush>
            </Border.Background>

            <!-- Gradient animation -->
            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <ColorAnimation Storyboard.TargetName="grad1" Storyboard.TargetProperty="Color"
                                            From="#10B981" To="#059669" Duration="0:0:3"/>
                            <ColorAnimation Storyboard.TargetName="grad3" Storyboard.TargetProperty="Color"
                                            From="#064E3B" To="#10B981" Duration="0:0:3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <Grid>
                <StackPanel VerticalAlignment="Center" Margin="40">
                    <TextBlock Text="GREENWHEEL"
                               FontSize="42" FontWeight="Bold"
                               Foreground="White" TextAlignment="Center"/>
                    <TextBlock Text="Drive Smarter • Go Greener"
                               FontSize="18" Foreground="#E8F5E9"
                               TextAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- RIGHT PANEL -->
        <Grid Grid.Column="1" Background="#F9FFFB">

            <!-- Title bar -->
            <Grid Height="36" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Background="Transparent"
                      MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"/>

                <!-- Cụm nút bo tròn -->
                <Border Grid.Column="1"
                        Background="#F3F4F6"
                        CornerRadius="14"
                        Padding="6,4"
                        Margin="0,6,12,0"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Button Background="#FFBD2E"
                                Click="MinimizeApp_Click"
                                Cursor="Hand"
                                Margin="0,0,8,0"
                                Style="{StaticResource CircleButtonStyle}"
                                ToolTip="Minimize"/>
                        <Button Background="#28C840"
                                Click="MaximizeApp_Click"
                                Cursor="Hand"
                                Margin="0,0,8,0"
                                Style="{StaticResource CircleButtonStyle}"
                                ToolTip="Maximize"/>
                        <Button Background="#FF5F57"
                                Click="CloseApp_Click"
                                Cursor="Hand"
                                Style="{StaticResource CircleButtonStyle}"
                                ToolTip="Close"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- LOGIN FORM -->
            <Border CornerRadius="18" Background="White"
                    Padding="50,40" Width="400"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="Welcome Back! 👋"
                               FontSize="30" FontWeight="Bold"
                               Foreground="#1a1a1a" TextAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Login to continue your journey"
                               FontSize="15" Foreground="#757575"
                               TextAlignment="Center" Margin="0,0,0,28"/>

                    <TextBlock Text="Email" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    <TextBox x:Name="TxtEmail"
                             Style="{StaticResource ModernTextBox}"
                             Text="staffA@greenwheel.vn"/>

                    <TextBlock Text="Password" FontWeight="SemiBold" FontSize="14" Margin="0,10,0,8"/>
                    <PasswordBox x:Name="TxtPassword"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Password="12345678"/>

                    <Button Content="LOGIN" Click="Button_Click"
                            Style="{StaticResource LoginButtonStyle}"
                            Margin="0,20,0,0">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#10B981" Offset="0"/>
                                <GradientStop Color="#059669" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <TextBlock x:Name="TxtStatus"
                               Foreground="#DC2626"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="0,14,0,0"
                               TextAlignment="Center"/>

                    <TextBlock Text="Powered by GreenWheel © 2025"
                               FontSize="11" Foreground="#A1A1A1"
                               TextAlignment="Center" Margin="0,22,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
