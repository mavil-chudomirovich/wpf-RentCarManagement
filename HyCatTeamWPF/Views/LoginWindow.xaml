<Window x:Class="HyCatTeamWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GreenWheel - Login" Height="380" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f5f5">

    <Border Background="White" CornerRadius="12" Padding="20" Margin="20"
            BorderBrush="#00c63e" BorderThickness="2" >
        <StackPanel>

            <TextBlock Text="GreenWheel Login" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#00c63e"
                       HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <!-- Email -->
            <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0 0 0 4"/>
            <TextBox x:Name="TxtEmail" Height="34" FontSize="14"
                     Padding="8" BorderBrush="#00c63e" Text="staffA@greenwheel.vn" BorderThickness="1"/>

            <!-- Password -->
            <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0 12 0 4"/>
            <PasswordBox x:Name="TxtPassword" Height="34" FontSize="14"
                         Padding="8" BorderBrush="#00c63e" Password="12345678" BorderThickness="1"/>

            <!-- Login Button -->
            <Button Content="Login" 
                    Height="38" 
                    Margin="0 20 0 0"
                    Background="#00c63e" 
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Button_Click"
                    Cursor="Hand"/>

            <TextBlock x:Name="TxtStatus"
                       Foreground="Red"
                       FontSize="13"
                       Margin="0 10 0 0"
                       TextWrapping="Wrap"/>

        </StackPanel>
    </Border>
</Window>