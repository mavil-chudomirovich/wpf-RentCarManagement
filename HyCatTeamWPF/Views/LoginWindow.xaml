<Window x:Class="HyCatTeamWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GreenWheel - Login"
        Height="400" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f5f0">

    <Window.Resources>
        <!-- Shadow effect -->
        <DropShadowEffect x:Key="ShadowGreen"
                          Color="#004d26"
                          BlurRadius="18"
                          ShadowDepth="2"
                          Opacity="0.18"/>

        <!-- Beautiful textboxes -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#00c63e"/>
            <Setter Property="BorderThickness" Value="1.4"/>
            <Setter Property="Background" Value="#f9fef9"/>
            <Setter Property="Margin" Value="0 4 0 10"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#00c63e"/>
            <Setter Property="BorderThickness" Value="1.4"/>
            <Setter Property="Background" Value="#f9fef9"/>
            <Setter Property="Margin" Value="0 4 0 10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#00c63e"/>
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        Padding="8"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#009c33"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00812a"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#cccccc"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- MAIN BORDER -->
    <Border Background="White" Padding="30"
            CornerRadius="14"
            BorderBrush="#00c63e" BorderThickness="2"
            Effect="{StaticResource ShadowGreen}"
            Margin="20">

        <!-- GRID LAYOUT -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TITLE -->
            <TextBlock Grid.Row="0"
                       Text="GreenWheel Login"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#00c63e"
                       Margin="0 0 0 25"/>

            <!-- EMAIL -->
            <TextBlock Grid.Row="1"
                       Text="Email"
                       FontWeight="SemiBold"
                       Foreground="#333"/>
            <TextBox x:Name="TxtEmail"
                     Grid.Row="1"
                     Text="staffA@greenwheel.vn"
                     Margin="0 22 0 0"/>

            <!-- PASSWORD -->
            <TextBlock Grid.Row="2" Margin="0 10 0 0"
                       Text="Password"
                       FontWeight="SemiBold"
                       Foreground="#333"/>
            <PasswordBox x:Name="TxtPassword"
                         Grid.Row="2"
                         Password="12345678"
                         Margin="0 22 0 0"/>

            <!-- LOGIN BUTTON -->
            <Button Grid.Row="3"
                    Content="Login"
                    Click="Button_Click"
                    Margin="0 25 0 0"/>

            <!-- STATUS MESSAGE -->
            <TextBlock x:Name="TxtStatus"
                       Grid.Row="4"
                       Foreground="Red"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Margin="0 12 0 0"/>
        </Grid>

    </Border>
</Window>
