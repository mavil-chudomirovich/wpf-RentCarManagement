<Window x:Class="HyCatTeamWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GreenWheel – Vehicle Search"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#f4f6f9">
    <Window.Resources>
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Greeting -->
            <RowDefinition Height="Auto"/>
            <!-- Search Box -->
            <RowDefinition Height="Auto"/>
            <!-- Vehicles Label -->
            <RowDefinition Height="*"/>
            <!-- Vehicle List -->
            <RowDefinition Height="Auto"/>
            <!-- Contracts Label -->
            <RowDefinition Height="*"/>
            <!-- Contract List -->
        </Grid.RowDefinitions>


        <!-- ✅ Greeting / User Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 15">

            <!-- Avatar -->
            <Border Width="50" Height="50" CornerRadius="25" Background="#e2e8f0">
                <Grid>
                    <Image x:Name="ImgAvatar"
                           Width="50"
                           Height="50"
                           Visibility="Collapsed"
                           Stretch="UniformToFill"
                           ClipToBounds="True">
                        <Image.Clip>
                            <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                        </Image.Clip>
                    </Image>

                    <TextBlock x:Name="TxtAvatarLetter"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#00C63E"/>
                </Grid>
            </Border>

            <!-- Name + Role -->
            <StackPanel Margin="14 0 0 0">
                <TextBlock x:Name="TxtFullName"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#111"/>

                <Border x:Name="RoleBadge"
                        Padding="6 2"
                        CornerRadius="6"
                        Background="#00C63E"
                        HorizontalAlignment="Left">
                    <TextBlock x:Name="TxtRole"
                               Foreground="White"
                               FontSize="13"
                               FontWeight="SemiBold"/>
                </Border>
            </StackPanel>
        </StackPanel>




        <!-- ✅ Search Bar -->
        <Border Grid.Row="1"
                CornerRadius="14"
                Background="White"
                Padding="20"
                Margin="0 0 0 10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="3"
                                  Opacity="0.3"
                                  Color="#33000000"/>
            </Border.Effect>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <!-- Station -->
                <StackPanel Width="200">
                    <TextBlock Text="Station"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Foreground="#333"/>
                    <ComboBox x:Name="CboStation"
                              Height="35"
                              Margin="0 5 0 0"
                              Background="#f1f5f9"
                              BorderBrush="#d1d5db"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"/>
                </StackPanel>

                <!-- Start Date -->
                <StackPanel Width="180" Margin="20 0 0 0">
                    <TextBlock Text="Start Date"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Foreground="#333"/>
                    <DatePicker x:Name="DateStart"
                                Height="35"
                                Margin="0 5 0 0"
                                Background="#f1f5f9"
                                BorderBrush="#d1d5db"/>
                </StackPanel>

                <!-- End Date -->
                <StackPanel Width="180" Margin="20 0 0 0">
                    <TextBlock Text="End Date"
                               FontWeight="SemiBold"
                               FontSize="13"
                               Foreground="#333"/>
                    <DatePicker x:Name="DateEnd"
                                Height="35"
                                Margin="0 5 0 0"
                                Background="#f1f5f9"
                                BorderBrush="#d1d5db"/>
                </StackPanel>

                <!-- Search Button -->
                <Button Content="Search"
                        Width="120"
                        Height="40"
                        Margin="20 20 0 0"
                        Background="#00C63E"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Button_Click"/>

                <!-- Rent Vehicle Button -->
                <Button Content="Rent Vehicle"
                        Width="120"
                        Height="40"
                        Margin="20 20 0 0"
                        Background="#00C63E"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Button_Click_1"/>
            </StackPanel>
        </Border>




        <!-- ✅ Section Title: Available Vehicles -->
        <TextBlock Grid.Row="2"
                   Text="Available Vehicles"
                   Foreground="#111"
                   FontWeight="Bold"
                   FontSize="18"
                   Margin="5 5"/>



        <!-- ✅ Vehicle List -->
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0 10 0 20">
            <WrapPanel x:Name="VehiclePanel"
                       Orientation="Horizontal"
                       ItemWidth="280"
                       ItemHeight="360"
                       Margin="0 10"/>
        </ScrollViewer>

        <!-- ✅ Section Title: Rental Contracts -->
        <TextBlock Grid.Row="4"
                   x:Name="contractTitle"
                   Text="Rental Contracts"
                   Foreground="#111"
                   FontWeight="Bold"
                   FontSize="18"
                   Margin="5 5"/>

        <!-- ✅ Contract List -->
        <ScrollViewer Grid.Row="5"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0 10 0 0">
            <StackPanel x:Name="ContractPanel"
                        Orientation="Vertical"
                        Margin="0 10"/>
        </ScrollViewer>

    </Grid>

</Window>
